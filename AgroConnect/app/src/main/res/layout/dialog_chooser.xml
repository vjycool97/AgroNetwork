<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_background"
    android:orientation="vertical"
    android:id="@+id/root_layout"
    android:paddingRight="@dimen/d20">

    <LinearLayout
        android:id="@+id/buy_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/d30"
        android:layout_above="@+id/sell_layout"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:paddingBottom="@dimen/d6"
            android:paddingLeft="@dimen/d12"
            android:paddingRight="@dimen/d12"
            android:paddingTop="@dimen/d6"
            android:layout_marginRight="@dimen/d20"
            android:text="@string/button_buy"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/symbol1"
            android:layout_width="@dimen/d50"
            android:layout_height="@dimen/d50"
            android:text="B"
            android:textStyle="normal"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:gravity="center"
            android:background="@drawable/circle" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sell_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/d100"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:paddingBottom="@dimen/d6"
            android:paddingLeft="@dimen/d10"
            android:paddingRight="@dimen/d10"
            android:paddingTop="@dimen/d6"
            android:layout_marginRight="@dimen/d20"
            android:text="@string/button_sell"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/symbol2"
            android:layout_width="@dimen/d50"
            android:layout_height="@dimen/d50"
            android:text="S"
            android:textStyle="normal"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:gravity="center"
            android:background="@drawable/circle" />
    </LinearLayout>


</RelativeLayout>
