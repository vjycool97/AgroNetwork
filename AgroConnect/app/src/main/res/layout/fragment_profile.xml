<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    android:overScrollMode="never"
    android:background="@android:color/white"
    tools:context="agroconnectapp.agroconnect.in.agroconnect.MainActivity$PlaceholderFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/d64"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/profile_iv"
                    android:layout_width="@dimen/d100"
                    android:layout_height="@dimen/d100"
                    android:src="@drawable/default_profile_img"
                    android:layout_marginTop="@dimen/d16"
                    android:scaleType="centerCrop"
                    android:layout_centerInParent="true"
                    />
                <ImageView
                    android:id="@+id/profile_edit_iv"
                    android:layout_width="@dimen/d32"
                    android:layout_height="@dimen/d32"
                    android:layout_margin="@dimen/d16"
                    android:src="@android:drawable/ic_menu_edit"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="16sp"
                android:layout_marginTop="@dimen/d12"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/city_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="@dimen/d12"
                android:textColor="@android:color/black"
                android:layout_marginTop="@dimen/d24"/>

            <TextView
                android:id="@+id/phone_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="@dimen/d12"
                android:textColor="@android:color/black"
                android:layout_marginTop="@dimen/d24"/>
            <TextView
                android:id="@+id/description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="16sp"
                android:layout_marginLeft="@dimen/d12"
                android:textColor="@android:color/black"
                android:layout_marginTop="@dimen/d24"/>

            <TextView
                android:id="@+id/agent_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="@dimen/d12"
                android:textColor="@android:color/black"
                android:layout_marginTop="@dimen/d24"/>

            <TextView
                android:id="@+id/organization_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="@dimen/d12"
                android:textColor="@android:color/black"
                android:layout_marginTop="@dimen/d24"/>

            <TextView
                android:id="@+id/department_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="@dimen/d12"
                android:textColor="@android:color/black"
                android:layout_marginTop="@dimen/d24"/>

            <TextView
                android:id="@+id/email_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="@dimen/d12"
                android:textColor="@android:color/black"
                android:layout_marginTop="@dimen/d24"/>

            <Button
                android:id="@+id/my_inventory_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d16"
                android:background="@android:color/holo_blue_dark"
                android:text="@string/title_activity_my_inventory"
                android:paddingLeft="@dimen/d8"
                android:paddingRight="@dimen/d8"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
</ScrollView>